
.header
	width: 100%
	color: #f0f0f0
	position: relative
	background-color: #2a333a

	&__inner
		max-width: 1160px
		margin: 0 auto
		padding: 10px 0


	.page-title
		margin: 0 auto
		padding: 0
		display: inline-block
		vertical-align: top
		color: $colors.blue

	.page-name
		font-family: 'Vollkorn', serif
		font-size: 32px
		font-weight: bold

		.poli
			color: $colors.white

		.thema
			color: $colors.blue

	.page-slogan
		display: block
		font-size: 14px
		font-weight: 100

	a
		color: $colors.white
		text-decoration: none


.header-menu
	display: inline-block
	vertical-align: top

	li
		padding: 0 5px
		display: inline-block
		font-size: 0
		line-height: 40px
		a
			font-size: 12px







.subheader
	width: 100%
	color: #505050
	position: relative
	background-color: #ffffff
	border-bottom: 1px solid #e9e9e9

	&__inner
		max-width: 1160px
		margin: 0 auto
		padding: 10px 0
		display: flex
		justify-content: space-between