
.post-image
.article-image

  display: block
  position: relative
  overflow: hidden

  img
    transition: transform 1800ms ease-in-out

  &:hover
    img
      transform: scale(1.05)

.article-image
  width: 100%





.caption-wrapper
  width: 1100px
  margin-left: -550px
  position: absolute
  left: 50%
  bottom: 0

.caption
  width: 100%
  padding: 10px
  color: $colors.white
  font-size: 12px
  position: absolute
  right: 0
  bottom: 0
  background: alpha($colors.black, 50%)

  &-header-image
    width: auto
    margin-left: 67%
    position: relative
    text-align: left
    text-shadow: 0 1px 1px $colors.black
    background: none
