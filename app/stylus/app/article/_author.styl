
.article-author
  clearfix()
  padding: 25px
  display: block
  font-style: normal
  border: 1px solid $colors.lightGrey
  background-color: $colors.white


  .author-image
    width: 120px
    height: 120px
    margin: 0 20px 20px 0
    display: block
    float: left
    overflow: hidden
    border-radius: 50%
    border: 1px solid $colors.blue

    img
      width: 120px
      display: block




  .author-name
    margin: 10px 0 0 0
    color: $colors.black
    font-weight: bold
    line-height: 100%


  .author-subheading
    color: $colors.grey
    font-size: 12px



  .author-description
    margin: 10px 0
    padding: 0 0 0 140px
    line-height: 165%
