
blockquote
.quote
  
  clearfix()
  margin: 0 0 10px 0
  padding: 15px 35px
  display: inline-block
  font-style: italic
  text-align: center
  position: relative
  z-index: 1
  background-color: $colors.white

  &:before
  &:after
    content: '\0275D'
    display: block
    color: darken($colors.white, 3%)
    font-size: 72px
    text-align: center
    position: absolute
    z-index: -1

  &:before
    left: 10px
    bottom: -15px

  &:after
    content: '\0275E'
    right: 10px
    top: -10px
