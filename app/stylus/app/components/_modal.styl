.modal

  width: 420px
  height: 340px
  display: none
  margin: -170px 0 0 -210px
  position: fixed
  z-index: 100
  left: 50%
  top: 50%
  text-align: center
  overflow: hidden
  border: 1px solid #f0f0f0
  background: $colors.white

  &:before
    content: ''
    width: 100%
    height: 100%
    display: block
    z-index: 1
    position: fixed
    left: 0
    top: 0
    background: alpha($colors.black, 0.78)

  &-content
    padding: 20px
    position: relative
    z-index: 2
    display: block
    text-align: left
    background: #fff


  &-button-close
    width: 32px
    height: 32px
    padding: 0 10px
    color: $colors.white
    float: right
    font-size: 24px
    line-height: 32px
    text-align: center
    cursor: pointer
    background-color: #ec5532
    z-index: 10
    position: absolute
    right: 0
    top: 0
    transition: background-color 150ms ease-in-out

    &:hover
      background-color: lighten(#ec5532, 20%)


  &-text
    color: $colors.white
    font-family: 'Proxima Nova'
    font-size: 24px

    span
      margin: 0 20px 0 0
      display: inline-block
      color: $colors.red
      font-weight: bold


  .vote-list
    margin: 0 0 20px 0
    display: block
    text-align: left

    li
      width: auto
      padding: 5px 7px
      display: inline-block
      cursor: pointer
      background-color: #f0f0f0
      border: 1px solid #f0f0f0

      &:hover
        border: 1px solid #c0c0c0

      &.thumb-down-down
        color: red
      &.thumb-down
        color: #ffa900
      &.thumb-medium
        transform: rotate(-90deg)
        color: yellow
      &.thumb-up
        color: #dcea35
      &.thumb-up-up
        color: #14bb14
