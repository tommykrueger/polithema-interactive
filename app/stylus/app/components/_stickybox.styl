.stickybox
  width: 100%
  padding: 20px
  display: block
  position: fixed
  left: 0
  bottom: -100px
  text-align: center
  transition: bottom 150ms ease-in-out
  background-color: alpha($colors.black, 80%)

  &.active
    bottom: 0

  &-close-btn
    position: absolute
    top: 10px
    right: 10px
    color: $colors.white
    font-size: 24px
    cursor: pointer 

  p
    color: $colors.white

  a
    color: $colors.blue
