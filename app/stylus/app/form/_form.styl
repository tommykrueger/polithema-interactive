.form
  display: block

  &-row
    display: block
    margin: 0 0 10px 0


  .input
    margin: 0 0 20px 0
    display: block

  input[type=text]
  input[type=tel]
  input[type=password]
  input[type=email]
  textarea

    @extends $input
    appearance: none
    -webkit-appearance: none

    &:active
    &:focus
      outline: 0


  .form_label
    margin: 10px 0 0 0
    display: block
    font-size: 12px


  .form-response
    margin: 0 0 10px 0
    color: $colors.red
    font-size: 14px

    &-success
      color: $colors.green



  button
    padding: 8px 12px
    color: $colors.white
    font-size: 18px
    cursor: pointer
    border: 0
    background-color: $colors.red
    transition: background-color 150ms ease-in-out

    &:hover
      background-color: darken($colors.red, 15%)
