

.article-teaser
  width: 25%
  display: block
  margin: 15px
  flex: 1 1 20%
  border: 1px solid #e0e0e0
  background-color: $colors.white
  //box-shadow: 0 0 3px alpha($colors.black, 0.3)

  &__image-wrapper
    position: relative

    &:before
      content: ''
      width: calc(100% - 8px)
      height: calc(100% - 8px)
      display: block
      position: absolute
      left: 0
      top: 0
      opacity: 0
      transition: transform 150ms ease-in-out, border-width 150ms ease-in-out, opacity 150ms ease-in-out
      transform-origin: 50% 50%
      border: 2px solid $colors.white
      box-shadow: 0 0 4px alpha($colors.black, 0.75)

    &:after
      content: 'View'
      width: 72px
      height: 48px
      margin-left: -36px
      margin-top: -24px
      display: block
      color: #000
      text-align: center
      line-height: 48px
      position: absolute
      left: 50%
      top: 50%
      transform: scale(0)
      box-shadow: 0 0 3px alpha($colors.black, 0.75)
      background-color: alpha($colors.white, 0.75)
      transition: transform 150ms ease-in-out
      transform-origin: 50% 50%

    &:hover
      &:before
        transform: scale(0.5)
        border-width: 4px
        opacity: 1.0

      &:after
        transform: scale(1.0)
        opacity: 1.0

  &__image
    width: 100%
    height: 165px 
    max-height: 175px

  &__subtitle
    margin: 0 0 5px 0
    display: block
    color: #a0a0a0
    font-family: 'Rubik', sans-serif
    font-size: 12px
    font-weight: 100

  &__title
    margin: 0 0 10px 0
    font-family: 'Roboto', Arial, sans-serif
    font-size: 14px
    font-weight: 500


  &__content
    padding: 10px

  &__excerpt
    display: none


  &__info-list
    margin: 0
    display: flex

    & > li
      margin-right: 15px
      color: #c0c0c0
      font-size: 13px

    span
      display: inline-block
      vertical-align: middle
      font-size: 12px
      font-family: 'Roboto' 
