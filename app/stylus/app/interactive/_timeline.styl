.timeline
  clearfix()
  position: relative
  padding: 0 0 0 160px

  &__start
    width: 120px
    display: block
    margin-left: -58px
    color: #505050
    font-weight: bold
    text-align: center
    line-height: 36px
    position: relative
    overflow: hidden
    border: 1px solid #a0a0a0
    border-radius: 12px
    box-shadow: 0 0 2px alpha($colors.black, 0.2)

    &:before
      content: ''
      width: 100%
      height: 100%
      position: absolute
      display: block
      border-radius: 11px
      border-top: 1px solid #fff
      box-shadow: inset 0 0 12px alpha($colors.black, 0.12)


.timeline-marker
  height: 100%
  display: none
  border-left: 4px solid #000
  position: absolute
  left: 50%


.timeline-events
  margin: 0
  padding: 0
  list-style: none
  position: relative


.timeline-events-item
  width: auto
  margin: 0
  padding: 0
  border-left: 4px solid $colors.red

  &:first-child
    padding-top: 20px


.timeline-events-item-header
  margin: 0 0 25px 0;
  position: relative;

.timeline-event-text
  margin-left: 50px
  padding: 0 0 50px 0



.timeline-event-date
  width: 160px
  height: auto
  margin-left: -160px
  padding: 0 20px
  display: block
  color: #d0d0d0
  font-size: 14px
  font-weight: 100
  font-family: 'Roboto', sans-serif
  line-height: 42px
  text-align: right
  white-space: nowrap
  position: absolute
  left: 0
  
  &:before
    content: ''
    width: 14px
    height: 14px
    border: 4px solid #fff
    border-radius: 50%
    background-color: $colors.red
    z-index: 2
    position: absolute
    right: -13px
    top: 10px


.timeline-event-name
  width: auto
  max-width: 100%
  margin: 0
  margin-left: 25px
  padding: 0 20px 0 25px
  display: block
  line-height: 42px
  letter-spacing: 1px
  text-transform: uppercase
  position: relative
  z-index: 1
  background-color: #f0f0f0


.timeline-event-text
  line-height: 135%



.timeline-limits
  height: 100%
  display: none
  border-left: 4px solid #000
  position: absolute
  left: 50%

  .timeline-limit
    height: 1000px
    display: block
    position: relative
    

  .timeline-limit-year
    width: 100px
    padding: 10px
    color: $colors.white
    text-align: center
    position: absolute
    left: -50px
    background: #898898

    &:nth-child(2)
      top: 1000px





.icon
  width: 100%
  height: 100%
  display: block
  position: relative

  svg 
    width: 100%
    height: 100%
    display: block
    position: absolute

  path 
    fill: #000