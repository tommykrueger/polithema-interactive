
.section
	clearfix()
	margin: 0 0 25px 0
	padding: 0
	display: block
	clear: both
	position: relative

	//background: $colors.white
	//border: 1px solid $colors.lightGrey


	&-headline
		margin: 0
		padding: 0 10px 0 0
		color: $colors.black
		font-size: 1.05em
		font-weight: bold
		position: relative
		left: 10px
		//border-bottom: 1px solid $colors.lightGrey

		&:before
			content: ''
			height: 20px
			padding-left: 5px
			border-left: 4px solid $colors.blue
			position: absolute
			left: -10px


	&-content
		clearfix()
		margin: 0
		padding: 10px 0
		display: block

		p
			line-height: 165%





	&-search
		padding: 0
		background: none
		border: 0

		.section-headline
			padding: 0
			display: none

		.section-content
			padding: 0

		.form

			.search-field
				width: 70%
				padding: 4px 8px
				float: left
				font-size: 18px
				border-width: 4px
				transition: border-color 150ms ease-in-out

				&:focus
					border-color: $colors.blue

			.search-button
				width: 30%
				float: left



	&-article-series
		background: $colors.white
		border: 1px solid #f0f0f0
		border-top: 2px solid $colors.red
		background: #fbfbfb


		.section-headline
			padding: 10px 0 0 0
			display: block
			left: 0
			border-left: 0
			font-size: 20px
			text-align: center

			&:before
				display: none


	&-latest-posts
		display: block

		li
			clearfix()
			margin: 0 0 10px 0
			padding: 0 0 10px 0

			&:hover
				img
					transform: scale(1.05)

		.image-wrapper
			width: 48%
			height: auto
			float: left
			margin: 0 4% 0 0
			overflow: hidden

			img
				transition: transform 1800ms ease-in-out



		.article-title
			width: 48%
			float: left
			color: $colors.black


	&-tags

		li
			width: auto
			margin: 0 6px 10px 0
			display: inline-block

			a
				padding: 6px 8px
				display: inline-block
				color: $colors.black
				font-size: 12px
				background: #f0f0f0
				text-transform: uppercase
				transition: color 250ms ease-in-out, background 250ms ease-in-out

				&:hover
					color: #fff
					background: $colors.blue




	&-featured-post
	&-featured-project

		.post-title
			margin: 5px 0
			font-size: 1.05em

		img
			width: 100%
			display: block

	&-didyouknow
		.article-content
			border: 0

	&-category

		p
			margin: 0 0 10px 0
			padding: 0 25px
			line-height: 165%
