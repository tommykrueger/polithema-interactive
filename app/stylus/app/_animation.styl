@keyframes pulse
	0%
		opacity: 1
		transform: scale(1)

	50%
		opacity: .85
		transform: scale(.95)

	100%
		opacity: 1
		transform: scale(1)



@keyframes blink
	0%
		opacity: 0.2
	50%
		opacity: 0.8
	100%
		opacity: 0.2

.blink
	animation: blink 2s linear infinite



@keyframes rotate
	0%
		transform: rotate(0deg)
	50%
		transform: rotate(-180deg)
	100%
		transform: rotate(-360deg)
